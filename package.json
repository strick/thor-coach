{
  "name": "thor-stack",
  "version": "1.0.0",
  "description": "AI-native workout logging system with MCP integration",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=thor-api",
    "dev:web": "npm run start --workspace=thor-web",
    "dev:agent": "npm run dev --workspace=thor-agent",
    "dev:mcp": "npm run start --workspace=thor-mcp",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=thor-api",
    "build:web": "npm run build --workspace=thor-web --if-present",
    "build:agent": "npm run build --workspace=thor-agent --if-present",
    "build:mcp": "npm run build --workspace=thor-mcp --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test --workspace=thor-api",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "clean": "rm -rf apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules node_modules"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "workout",
    "fitness",
    "ai",
    "mcp",
    "voice-assistant",
    "monorepo"
  ],
  "author": "",
  "license": "MIT"
}
