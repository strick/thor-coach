{
  "type": "module",
  "scripts": {
    "dev": "bash -c 'source ~/.nvm/nvm.sh && nvm use 22 && tsx watch src/server.ts'",
    "build": "bash -c 'source ~/.nvm/nvm.sh && nvm use 22 && tsc -p tsconfig.json'",
    "start": "bash -c 'source ~/.nvm/nvm.sh && nvm use 22 && node dist/server.js'",
    "test": "bash -c 'source ~/.nvm/nvm.sh && nvm use 22 && vitest run'",
    "test:watch": "bash -c 'source ~/.nvm/nvm.sh && nvm use 22 && vitest'",
    "test:coverage": "bash -c 'source ~/.nvm/nvm.sh && nvm use 22 && vitest run --coverage'"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "node-cron": "^4.2.1",
    "openai": "^4.56.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.8"
  }
}
